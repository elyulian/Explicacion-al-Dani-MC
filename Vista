    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int conta = 0;
         int costoacum = 0;
             double costoprom;
        
           
             switch(animal.getText()){
         
             case "gato":
                 
                 ca.setText(String.valueOf(f1.getCostoAnimal()));
                 f1.setNumeroConsulta(conta++);
                 dese.setText("Los félidos o comúnmente llamados felinos son una familia de mamíferos placentarios del orden Carnivora");
                 desg.setText("animal pequeño");
                 costoacum += f1.getCostoAnimal();
                 costoprom = costoacum/conta;
                 consulta.setText(String.valueOf(conta));
                 
                 break;
                 
             case "perro":
                 ca.setText(String.valueOf(c1.getCostoAnimal()));
                 c1.setNumeroConsulta(conta++);
                 dese.setText("Los cánidos son una familia de mamíferos del orden Carnivora, de régimen carnívoro");
                 desg.setText("animal pequeño");
                 costoacum += c1.getCostoAnimal();
                 costoprom = costoacum/conta;
                 consulta.setText(String.valueOf(conta));
                 
                 break;
                 
         
             case "caballo":
                 ca.setText(String.valueOf(e1.getCostoAnimal()));
                 e1.setNumeroConsulta(conta++);
                 dese.setText("Animal équido, especialmente el que sirve para la monta o el transporte de cosas");
                 desg.setText("animal pequeño");
                 costoacum += e1.getCostoAnimal();
                 costoprom = costoacum/conta;
                 consulta.setText(String.valueOf(conta));
                 
                 break;
  
         }
            
             

    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
            
        int contador=0;
            contador++;
            animal.setText("");
            
        consulta.setText(String.valueOf(contador));
        

        // TODO add your handling code here:
    }                                        

